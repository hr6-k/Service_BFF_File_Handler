{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./",  // تغییر به ریشه پروژه
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",      // شامل تمام فایل‌ها در پوشه src
    "__tests__/**/*" // و فایل‌های تست در پوشه __tests__
  ],
  "exclude": [
    "node_modules"
  ]
}
